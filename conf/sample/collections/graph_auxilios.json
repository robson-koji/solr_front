{
  "COLLECTION":{
    "label": "Projetos (Auxílios e Bolsas)",
    "omite_secoes": ["refine", "wordcloud"],
    "campo_dinamico_busca": "cross_collection_auxilios"
  },
  "EXPORT_DATA":{
    //"campos do solr que iram ser exportados em arquivo, fields devem ser docvalues"
